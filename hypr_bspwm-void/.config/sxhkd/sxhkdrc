# rofi-things
alt + semicolon
	rofi -show emoji

alt + shift + semicolon
	rofi -show calc -modi calc -no-show-match -no-sort

# xcolor
alt + p
	xcolor -f HEX -s clipboard

alt + shift + p
	xcolor -f rgb -s clipboard

# printscreen
@Print
	scrot ~/stuffs/pic/screenshots/%Y-%m-%d-%T-screenshot.png -s --line mode=edge && notify-send -t 1250 "screenshot taken"

control + @Print
	scrot ~/stuffs/pic/screenshots/%Y-%m-%d-%T-screenshot.png -f && notify-send -t 1250 "screenshot taken"

# camera
control + alt + c
	ffplay -fast /dev/video0

# brightness keys
XF86MonBrightnessUp
	brightnessctl set 10%+

XF86MonBrightnessDown
	brightnessctl set 10%-


# media keys
XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause


# volume keys
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
  pactl set-source-mute @DEFAULT_SOURCE@ toggle


# lockscreen
alt + comma
	i3lock --nofork


# program launcher
alt + d
	rofi -terminal $TERMINAL -show drun -icon-theme "Adwaita" -show-icons


# Reload sxhkd
alt + shift + Escape
	pkill -USR1 -x sxhkd


# bspwm hotkeys


# quit/restart bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}


# close and kill
alt + q
	bspc node -{c,k}


# state/flags
alt + f
	bspc node -t fullscreen

alt + t
	bspc node focused.fullscreen -t tiled

alt + shift + f
	bspc node focused.tiled -t floating

alt + shift + t
	bspc node focused.floating -t tiled


# focus/swap


# focus the node in the given direction
alt + {h,j,k,l}
	bspc node -f {west,south,north,east}


# focus the next/previous desktop in the current monitor
alt + bracket{left,right}
	bspc desktop -f {prev,next}.local


# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last


# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# move/resize


# expand a window by moving one of its side outward
alt + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}


# contract a window by moving one of its side inward
control + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}


# move a floating window
control + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# applications


# browser
alt + w
	$BROWSER

# mail
alt + e
  $MAIL

# terminal
alt + Return
	$TERMINAL

alt + r
	$TERMINAL -e ranger


# using notification without bars


# date
alt + b
  notify-send -t 2000 "`date +%A` `date +%m/%d/%Y`" "`date +%H:%M:%S`"

# battery
alt + shift + b
  notify-send -t 2000 "`acpi -b`"

# temperature
control + alt + b
  notify-send -t 2000 "`acpi -t`"


# notifications

# history
alt + space
  dunstctl history-pop

Menu
	xte 'mouseclick 3'
