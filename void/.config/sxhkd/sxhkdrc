# app binds
super + Return
	$TERMINAL

super + r
	$TERMINAL -e ranger

super + d
	rofi -terminal $TERMINAL -show drun

super + e
	$MAIL

super + w
	$BROWSER

# camera
super + control + c
	ffplay -fast /dev/video0

# lockscreen
super + comma
	i3lock --nofork -ec 00000000

# notification details without bars
super + b
  	notify-send -t 2000 "`date +%A` `date +%m/%d/%Y`" "`date +%H:%M:%S`"

super + shift + b
  	notify-send -t 2000 "`acpi -b`"

super + control + b
  	notify-send -t 2000 "`acpi -t`"

super + space
  	dunstctl history-pop

# color-picker
super + p
	xcolor -f HEX -s clipboard

super + shift + p
	xcolor -f rgb -s clipboard

# screenshot
Print
	scrot ~/stuffs/pic/screenshots/%m-%d-%Y_%T-screenshot.png -i -s -l mode=edge && notify-send -t 1250 "screenshot taken"

control + Print
	scrot ~/stuffs/pic/screenshots/%m-%d-%Y_%T-screenshot.png && notify-send -t 1250 "screenshot taken"

# reload sxhkd & bspwm
super + shift + Escape
	pkill -USR1 -x sxhkd

super + shift + {q,r}
	bspc {quit,wm -r}

# media binds
XF86Eject
	eject -T

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
  	pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86AudioMedia
	playerctl play-pause

XF86AudioPlay
	playerctl play-pause

XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86MonBrightnessUp
	brightnessctl set +10%

XF86MonBrightnessDown
	brightnessctl set 10%-

# close a window
super + q
	bspc node -c

# fullscreen/float
super + f
	bspc node -t fullscreen

super + t
	bspc node focused.fullscreen -t tiled

super + shift + f
	bspc node focused.tiled -t floating

super + shift + t
	bspc node focused.floating -t tiled

# focus window
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# expand window
super + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + control + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
control + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
